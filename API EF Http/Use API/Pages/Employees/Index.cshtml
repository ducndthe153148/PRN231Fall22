@page
@model Use_API.Pages.Employees.IndexModel
@{

}


<div class="text-center">
    <div class="container row p-0 m-0">
        <div class="col-9">
            <h2 class="text-info">Genres List</h2>
        </div>

        <div class="col-12 border p-3 mt-3">

            @if (Model.Employees.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            <label asp-for="Employees.FirstOrDefault().FirstName"></label>
                        </th>
                        <th>
                            <label asp-for="Employees.FirstOrDefault().LastName"></label>
                        </th>
                        <th>
                            <label>Department</label>
                        </th>
                        <th>
                            <label asp-for="Employees.FirstOrDefault().Title"></label>
                        </th>
                        <th>
                            <label asp-for="Employees.FirstOrDefault().TitleOfCourtesy"></label>
                        </th>
                        <th>
                            <label asp-for="Employees.FirstOrDefault().BirthDate"></label>
                        </th>
                        <th>
                            <label asp-for="Employees.FirstOrDefault().HireDate"></label>
                        </th>
                        <th>
                            <label asp-for="Employees.FirstOrDefault().Address"></label>
                        </th>
                        <th>
                            <label>Aciton</label>
                        </th>
                    </tr>
                    @foreach (var item in Model.Employees)
                    {
                        
                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.DepartmentId)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.TitleOfCourtesy)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.BirthDate)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.HireDate)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Address)
                            </td>
                            <td>
                                <form method="post">
                                    <button asp-page-handler="Delete" asp-route-id="@item.EmployeeId" onclick="return confirm('Delete this film will delete all related comment. Are you sure?')" class="btn btn-danger btn-sm">Delete</button>
                                    @*<a asp-page="Edit" class="btn btn-success btn-sm text-white" data-toggle="modal" data-target="@itemName">Edit</a>*@
                                </form>
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>No Genres to show</p>
            }

        </div>
    </div>
</div>
