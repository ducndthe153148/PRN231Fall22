
@model ClientSever.DTO.AccCusDTO
<div id="form">
    <div id="form-title">
        <span><a href="/Welcome/Signup">SIGN UP</a></span>
        <span><a href="/Welcome/Signin" style="color: red;">SIGN IN</a></span>
    </div>
    <div id="form-content">

        @if (ViewBag.Mess == "1")
        {
            <span style="color: red"st><p>
                Signup unsuccessfully
            </p></span>
        } else if(ViewBag.Mess == "2"){
            <p>
                Password and Repassword is different
            </p>
        }
        @using (Html.BeginForm("SignupAccount", "Welcome", FormMethod.Post))
        {
            <div>
                <div>
                    @Html.LabelFor(x => x.CompanyName)
                    @Html.TextBoxFor(x => x.CompanyName)
                    <span style="color: red;">@Html.ValidationMessageFor(x => x.CompanyName)</span>
                </div>
                <div>
                    @Html.LabelFor(x => x.ContactName)
                    @Html.TextBoxFor(x => x.ContactName)
                    <span style="color: red;">@Html.ValidationMessageFor(x => x.ContactName)</span>
                </div>
                <div>
                    @Html.LabelFor(x => x.ContactTitle)
                    @Html.TextBoxFor(x => x.ContactTitle)
                    <span style="color: red;">@Html.ValidationMessageFor(x => x.ContactTitle)</span>
                </div>
                <div>
                    @Html.LabelFor(x => x.Address)
                    @Html.TextBoxFor(x => x.Address)
                    <span style="color: red;">@Html.ValidationMessageFor(x => x.Address)</span>
                </div>
                <div>
                    @Html.LabelFor(x => x.Email)
                    @Html.TextBoxFor(x => x.Email)
                    <span style="color: red;">@Html.ValidationMessageFor(x => x.Email)</span>
                </div>
                <div>
                    @Html.LabelFor(x => x.Password)
                    @*@Html.TextBoxFor(x => x.Password)*@
                    <input asp-for="Password" type="password" />
                    <span style="color: red;">@Html.ValidationMessageFor(x => x.Password)</span>
                </div>
                <div>
                    RePassword
                    <input name="rePassword" type="password"/>
                    <span style="color: red;">@Html.ValidationMessageFor(x => x.Password)</span>
                </div>
                <div>
                    <input type="submit" value="Save" />
                </div>
            </div>
        }
    </div>
</div>